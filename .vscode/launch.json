{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Directly ts-node",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "ts-node"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run live debug nodemon",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "nodemon"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}