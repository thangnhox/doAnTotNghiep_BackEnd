{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Debug Script",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Directly",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "run"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Directly ts-node",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "ts-node",
                "src/index.ts"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run live debug nodemon",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--exec",
                "ts-node",
                "src/index.ts"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}